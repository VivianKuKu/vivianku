backend:
  name: github
  repo: viviankuku/vivianku
  branch: main # or the branch you use for deployment

local_backend: true

media_folder: "asset"
public_folder: "/asset"

collections:
  - name: "writing"
    label: "Selected Writing"
    folder: "_writing"
    create: true
    slug: "{{slug}}"
    fields:
      - { label: "Category", name: "category", widget: "string" }
      - label: "Title"
        name: "title"
        widget: "object"
        fields:
          - { label: "English", name: "en", widget: "string" }
          - { label: "Chinese", name: "zh", widget: "string" }
      - label: "Meta Description"
        name: "meta"
        widget: "object"
        fields:
          - { label: "English", name: "en", widget: "text" }
          - { label: "Chinese", name: "zh", widget: "text" }
      - { label: "URL", name: "url", widget: "string" }

  - name: "pages"
    label: "Site Content"
    files:
      - label: "Global Content"
        name: "content"
        file: "_data/content.yml"
        fields:
          - label: "Navigation"
            name: "nav"
            widget: "object"
            fields:
              - label: "About"
                name: "about"
                widget: "object"
                fields:
                  - { label: "English", name: "en", widget: "string" }
                  - { label: "Chinese", name: "zh", widget: "string" }
              - label: "What I Do"
                name: "work"
                widget: "object"
                fields:
                  - { label: "English", name: "en", widget: "string" }
                  - { label: "Chinese", name: "zh", widget: "string" }
              - label: "Writing"
                name: "writing"
                widget: "object"
                fields:
                  - { label: "English", name: "en", widget: "string" }
                  - { label: "Chinese", name: "zh", widget: "string" }
              - label: "Let's Connect"
                name: "connect"
                widget: "object"
                fields:
                  - { label: "English", name: "en", widget: "string" }
                  - { label: "Chinese", name: "zh", widget: "string" }

          - label: "Hero Section"
            name: "hero"
            widget: "object"
            fields:
              - label: "Role"
                name: "role"
                widget: "object"
                fields:
                  - { label: "English", name: "en", widget: "string" }
                  - { label: "Chinese", name: "zh", widget: "string" }
              - label: "Positioning Statement"
                name: "positioning"
                widget: "object"
                fields:
                  - { label: "English", name: "en", widget: "text" }
                  - { label: "Chinese", name: "zh", widget: "text" }

          - label: "About Me"
            name: "about"
            widget: "object"
            fields:
              - label: "Main Text"
                name: "main"
                widget: "object"
                fields:
                  - label: "Paragraph 1"
                    name: "p1"
                    widget: "object"
                    fields:
                      - { label: "English", name: "en", widget: "text" }
                      - { label: "Chinese", name: "zh", widget: "text" }
                  - label: "Paragraph 2"
                    name: "p2"
                    widget: "object"
                    fields:
                      - { label: "English", name: "en", widget: "text" }
                      - { label: "Chinese", name: "zh", widget: "text" }
              - label: "Mission Statement"
                name: "mission"
                widget: "object"
                fields:
                  - { label: "English", name: "en", widget: "text" }
                  - { label: "Chinese", name: "zh", widget: "text" }
              - label: "Pillars"
                name: "pillars"
                widget: "object"
                fields:
                  - label: "Speaking"
                    name: "speaking"
                    widget: "object"
                    fields:
                      - label: "Label"
                        name: "label"
                        widget: "object"
                        fields:
                          - { label: "English", name: "en", widget: "string" }
